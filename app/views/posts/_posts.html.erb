<ul class="contents">
  <% @posts.each do |post| %>
    <li class="content" id="book-content">
      <%= link_to image_tag(post.image,size: '180x250'), post_path(post.id),method: :get %>
      <div class="book-name">
      <%= post.book_name %>
      </div>
      <div class="category-name">
      <%= post.category.name %>
      </div>
      <div class="user-name">
      <%= post.user.name %>
      </div>
    </li>
    <% end %>
  </ul>